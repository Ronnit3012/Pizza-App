<!-- This is the layout for all our pages -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="/img/favicon.png">
    
    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com"><link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@300;400;700&display=swap" rel="stylesheet">
    <!-- Tailwind -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Line Awesome -->
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <!-- Socket.io -->
    <script src="https://cdn.socket.io/4.4.0/socket.io.js"></script>

    <link rel="stylesheet" href="/css/style.css">
    <title>RealTime Pizza App</title>
</head>
<body>
    <!-- Navbar -->
    <nav class="container mx-auto flex items-center justify-between py-4">
        <div class="cursor-pointer">
            <a href="/">
                <img src="/img/logo.png" alt="Logo">
            </a>
        </div>
        <div>
            <ul class="flex gap-6 items-center">
                <li class="menuBtn"><a href="/">Menu</a></li>
                <!-- <li><a href="#">Offers</a></li> -->
                <% if(user) { %>
                    <% if(user.role === 'customer') { %>
                        <li><a href="/customer/orders">My Orders</a></li>
                    <% } %>
                    <li>
                        <form id="logout" class="cursor-pointer" action="/logout" method="POST">
                            <a onclick="document.getElementById('logout').submit()" >Logout</a>
                        </form>
                    </li>
                <% } else { %>
                    <li><a href="/register">Register</a></li>
                    <li><a href="/login">Login</a></li>
                <% } %>
                <li><a href="/cart" class="flex items-center inline-block px-4 py-2 rounded-full">
                    <span id="cartCounter" class="text-white font-bold pr-2" data-session="<%= JSON.stringify(session) %>"><%= session.cart ? session.cart.totalQty : '' %></span>
                    <img src="/img/cart.png" alt="Cart">
                </a></li>
            </ul>
        </div>
    </nav>

    <%- body %>
    
    <script src="/js/app.js"></script>
</body>
</html>